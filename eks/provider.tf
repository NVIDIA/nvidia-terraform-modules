provider "helm" {
  kubernetes {
    host                   = data.aws_eks_cluster.holoscan.endpoint
    cluster_ca_certificate = base64decode(data.aws_eks_cluster.holoscan.certificate_authority.0.data)
    exec {
      api_version = "client.authentication.k8s.io/v1"
      args        = ["eks", "get-token", "--cluster-name", data.aws_eks_cluster.holoscan.name]
      command     = "aws"
    }
  }
}
